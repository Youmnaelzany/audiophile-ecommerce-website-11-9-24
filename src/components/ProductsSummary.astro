---
import {Image} from 'astro:assets';
import Earphones from '../assets/shared/desktop/image-category-thumbnail-earphones.png';
import Headphones from '../assets/shared/desktop/image-category-thumbnail-headphones.png';
import Speakers from '../assets/shared/desktop/image-category-thumbnail-speakers.png';
import ArrowRight from '../assets/shared/desktop/icon-arrow-right.svg';
---

<div
  class='flex flex-col items-center justify-center gap-[4.25rem] sm:flex-row sm:justify-between sm:gap-[0.62rem] xl:gap-[1.88rem]'
>
  <!-- Headphones -->
  <div
    class='relative h-[10.3125rem] w-[20.4375rem] rounded-lg bg-[#F1F1F1] sm:h-[10.3125rem] sm:w-[13.9375rem] xl:h-[12.75rem] xl:w-[21.875rem]'
  >
    <Image
      src={Headphones}
      alt='Headphones Category.'
      width={120}
      class:list={[
        'absolute left-[101px] top-[-32px] flex items-center justify-center sm:left-[45px] sm:top-[-38px]',
      ]}
    />
    <div
      class='flex flex-col items-center justify-center gap-[1.06rem] pt-[4.5rem] text-center'
    >
      <h2
        class='text-[0.9375rem] font-bold uppercase leading-normal tracking-[0.06694rem] text-black'
      >
        Headphones
      </h2>
      <a
        href='/headphones'
        rel='noopener noreferrer'
        class='flex items-center justify-between gap-[0.38rem] text-sm font-bold uppercase tracking-[0.0625rem] text-black opacity-50'
        >SHOP
        <Image src={ArrowRight} alt='Right Arrow.' />
      </a>
    </div>
  </div>
  <!-- Speakers -->
  <div
    class='relative h-[10.3125rem] w-[20.4375rem] rounded-lg bg-[#F1F1F1] sm:h-[10.3125rem] sm:w-[13.9375rem] xl:h-[12.75rem] xl:w-[21.875rem]'
  >
    <Image
      src={Speakers}
      alt='Speakers Category.'
      width={120}
      class:list={[
        'absolute left-[99px] top-[-32px] flex items-center justify-center sm:left-[50px] sm:top-[-38px]',
      ]}
    />
    <div
      class='flex flex-col items-center justify-center gap-[1.06rem] pt-[4.5rem] text-center'
    >
      <h2
        class='text-[0.9375rem] font-bold uppercase leading-normal tracking-[0.06694rem] text-black'
      >
        Speakers
      </h2>
      <a
        href='/speakers'
        rel='noopener noreferrer'
        class='flex items-center justify-between gap-[0.38rem] text-sm font-bold uppercase tracking-[0.0625rem] text-black opacity-50'
        >SHOP
        <Image src={ArrowRight} alt='Right Arrow.' />
      </a>
    </div>
  </div>
  <!-- Earphones -->
  <div
    class='relative h-[10.3125rem] w-[20.4375rem] rounded-lg bg-[#F1F1F1] sm:h-[10.3125rem] sm:w-[13.9375rem] xl:h-[12.75rem] xl:w-[21.875rem]'
  >
    <Image
      src={Earphones}
      alt='Earphones Category.'
      width={150}
      class:list={[
        'absolute left-[87px] top-[-32px] flex items-center justify-center sm:left-[35px] sm:top-[-38px]',
      ]}
    />
    <div
      class='flex flex-col items-center justify-center gap-[1.06rem] pt-[4.5rem] text-center'
    >
      <h2
        class='text-[0.9375rem] font-bold uppercase leading-normal tracking-[0.06694rem] text-black'
      >
        Earphones
      </h2>
      <a
        href='/earphones'
        rel='noopener noreferrer'
        class='flex items-center justify-between gap-[0.38rem] text-sm font-bold uppercase tracking-[0.0625rem] text-black opacity-50'
        >SHOP
        <Image src={ArrowRight} alt='Right Arrow.' />
      </a>
    </div>
  </div>
</div>
