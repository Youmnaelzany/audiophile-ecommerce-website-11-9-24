---
interface HeaderProps {
  LightBlack: string;
  DrakBlack: string;
}
const {LightBlack = '#191919', DrakBlack = '#000'} = Astro.props as HeaderProps;

import {Image} from 'astro:assets';
import Logo from '../assets/shared/desktop/logo.svg';
import MenuIcon from '../assets/shared/tablet/icon-hamburger.svg';
import CartMenu from '../assets/shared/desktop/icon-cart.svg';
import MobileMenu from './MobileMenu.astro';
import CartMenuBar from './CartMenu.astro';
---

<header
  class='relative flex h-[5.56rem] w-full max-w-[90rem] items-center justify-between gap-[4.31rem] px-6 sm:pl-[2.44rem] sm:pr-10 xl:h-24 xl:px-[10.31rem]'
  style={{backgroundColor: LightBlack}}
>
  <!-- Mobile Menu BTN -->
  <div class='flex items-center justify-center gap-[4.75rem] sm:gap-[2.63rem]'>
    <button type='button' id='menuOpen' class='xl:hidden'>
      <Image src={MenuIcon} alt='Open Menu Bar.' />
    </button>
    <!-- The Logo -->
    <a href='/' class=''>
      <Image src={Logo} alt='Audiophile Logo.' />
    </a>
  </div>
  <!-- Mobile Menu Window -->
  <MobileMenu class:list={['hidden', 'xl:hidden']} />
  <!-- Desktop Menu -->
  <nav class='hidden xl:block'>
    <ul class='flex items-center justify-between gap-[2.12rem]'>
      <li>
        <a
          href='/'
          class='tranistion-colors cursor-pointer text-[0.8125rem] font-bold uppercase leading-[1.5625rem] tracking-[0.125rem] text-white duration-300 ease-in-out hover:text-[#D87D4A]'
          >Home</a
        >
      </li>
      <li>
        <a
          href='/headphones'
          class='tranistion-colors cursor-pointer text-[0.8125rem] font-bold uppercase leading-[1.5625rem] tracking-[0.125rem] text-white duration-300 ease-in-out hover:text-[#D87D4A]'
          >Headphones</a
        >
      </li>
      <li>
        <a
          href='/speakers'
          class='tranistion-colors cursor-pointer text-[0.8125rem] font-bold uppercase leading-[1.5625rem] tracking-[0.125rem] text-white duration-300 ease-in-out hover:text-[#D87D4A]'
          >Speakers</a
        >
      </li>
      <li>
        <a
          href='/earphones'
          class='tranistion-colors cursor-pointer text-[0.8125rem] font-bold uppercase leading-[1.5625rem] tracking-[0.125rem] text-white duration-300 ease-in-out hover:text-[#D87D4A]'
          >Earphones</a
        >
      </li>
    </ul>
  </nav>
  <!-- Cart Menu Btn -->
  <button type='button' id='menuOpen'>
    <Image src={CartMenu} alt='Open Cart Menu.' />
  </button>
  <!-- Cart Menu Window -->
  <CartMenuBar />
</header>

<script is:inline>
  const MenuOpen = document.getElementById('menuOpen');
  const MobileMenu = document.getElementById('MobileMenu');
  MenuOpen.addEventListener('click', () => {
    MobileMenu.classList.toggle('hidden');
  });
</script>
